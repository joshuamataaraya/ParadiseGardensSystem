<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    card_view:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/tw__solid_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee Coaster"
            android:id="@+id/name"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carritos de forma de granos de café en un recorrido de 2minutos con caídas libres y subidas de 90 grados."
            android:id="@+id/description"
            android:layout_below="@+id/name"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario: "
            android:id="@+id/TagSchedule"
            android:layout_below="@+id/description"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="De 5 a 9."
            android:id="@+id/schedule"
            android:layout_below="@+id/description"
            android:layout_toRightOf="@id/TagSchedule"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: "
            android:id="@+id/Tagstate"
            android:layout_below="@+id/TagSchedule"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/state"
            android:text="En reparación"
            android:layout_below="@+id/schedule"
            android:layout_toRightOf="@id/Tagstate"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacidad: "
            android:id="@+id/TagCapacity"
            android:layout_below="@+id/Tagstate"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/capacity"
            android:text="5 personas"
            android:layout_below="@+id/state"
            android:layout_toRightOf="@id/TagCapacity"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo de espera: "
            android:id="@+id/Tagtime"
            android:layout_below="@+id/TagCapacity"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeToWait"
            android:text="10 mins"
            android:layout_below="@+id/TagCapacity"
            android:layout_toRightOf="@id/Tagtime"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>